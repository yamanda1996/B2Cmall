<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo" xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
         http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
	<!-- 配置扫描包 -->
	<context:component-scan base-package="cn.e3mall.sso.controller" />
	<mvc:annotation-driven />    <!-- 处理器映射器和处理器适配器 -->
	<!-- 视图解析器配置前缀和后缀 -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
	<!-- 引用dubbo服务 -->
	<dubbo:application name="e3-sso-web" />
	<dubbo:registry protocol="zookeeper" address="192.168.1.144:2181" />
	<dubbo:reference interface="cn.e3mall.sso.service.RegisterService" id="registerService" />    <!--引用的实质就是在springmvc容器中创建一个对应接口的bean -->
	<dubbo:reference interface="cn.e3mall.sso.service.LoginService" id="loginService" />
	<dubbo:reference interface="cn.e3mall.sso.service.TokenService" id="tokenService" />
	<!-- springmvc中拦截形式写的是/需要配置资源映射，放行css、js等资源 -->
	<!-- 配置资源映射，不要拦截js和css样式 -->
	<!-- <mvc:resources location="/css/" mapping="/css/**"></mvc:resources>    webapp是根目录 结尾处还有一个/
	<mvc:resources location="/js/" mapping="/js/**"></mvc:resources> -->
	<mvc:resources location="/css/" mapping="/css/**"></mvc:resources>
	<mvc:resources location="/js/" mapping="/js/**"></mvc:resources>
	<mvc:resources location="/images/" mapping="/images/**"></mvc:resources>

	<!-- 配置多媒体解析器，用来处理图片上传 -->
	<!-- <bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		设定默认编码
		<property name="defaultEncoding" value="UTF-8"></property>
		设定文件上传的最大值5MB，5*1024*1024
		<property name="maxUploadSize" value="5242880"></property>
	</bean> -->
	
	<!-- 读取resource.properties配置文件 -->
	<context:property-placeholder location="classpath:conf/resource.properties"/>
	<!-- 在spring和springmvc中placeholder只能配置一个，配置两个的话只能有一个生效 -->

</beans>
